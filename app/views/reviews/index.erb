<div class="navbar-fixed">
<nav>
  <div class="nav-wrapper blue lighten-2">
    <%= image_tag("Screen_Shot.png", size: "100x64", :alt => "logo") %>
    <a href="/" class="brand-logo center ">AERO</a>
    <ul class="right hide-on-med-and-down">
      <li><%= link_to "Main Menu", user_path(current_user.id) %></li>
      <li><%= link_to "Book Flight", new_search_path %></li>
      <li><%= link_to "Log Out", logout_path, :method => :delete %></li>
    </ul>
  </div>
</nav>
</div>



  <div id="review_index">
    <%= image_tag("chris-lawton-346402-unsplash.jpg", style:"height: 50%; width: 100%;") %>
    <div id="review1">
        <h2>Leave a Review</h2>
    </div>
  </div>
<div class="container">

<div class="row">
  <% @reviews.each do |rev| %>
  <div class="col s6">
    <div class="card">
        <div class="card-content">
          <label>Airline:</label>
          <%= rev.flight.airline%><br>
          <label>Flight Name:</label>
          <%= rev.flight.name%><br>
          <label>Rating:</label>
          <%= rev.rating %><br>
          <label>Content:</label>
          <%= rev.content %>
          <hr>
        </div>
      </div>
  </div>
  <% end %>
</div>

<div class="review_main">
<%= button_to "Main Menu", user_path(current_user), :method => :get, class:"waves-effect waves-light btn #64b5f6 blue lighten-2 btn-medium" %>
</div>

</div>
