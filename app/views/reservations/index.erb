<div class="navbar-fixed">
<nav>
  <div class="nav-wrapper blue lighten-2">
    <%= image_tag("Screen_Shot.png", size: "100x64", :alt => "logo") %>
    <a href="/" class="brand-logo center ">AERO</a>
    <ul class="right hide-on-med-and-down">
      <li><%= link_to "Main Menu", user_path(current_user.id) %></li>
      <li><%= link_to "Book Flight", new_search_path %></li>
      <li><%= link_to "Log Out", logout_path, :method => :delete %></li>
    </ul>
  </div>
</nav>
</div>


<div id="card-image_res">
  <%= image_tag("jazmin-quaynor-392995-unsplash.jpg", style:"height: 100%; width: 80%;") %>
  <div id="res_header">
    <h3 class="white-text">Your reservations:</h3>
  </div>
</div>
<div class="container">

<div class="row">
  <% @reservations.each do |res| %>
  <div class="col s6">
    <div class="card">
        <div class="card-content">
          <label>Flight Name:</label>
          <%= res.flight.name %><br>
          <label>Airline Name:</label>
          <%= res.flight.airline  %><br>
          <label>Origin:</label>
          <%= res.flight.state %><br>
          <label>Destination:</label>
          <%= res.flight.destination_state %><br>
          <label>Departure Date:</label>
          <%= res.flight.date %><br>
          <label>Return Date:</label>
          <%= res.flight.return_date %>
        </div>
        <div class="card-action">
          <% if res.flight.return_date > Date.today %>
          <h7 class="center-align">You can't leave a review yet! Enjoy your trip first!</h7>
          <% else %>
          <%= link_to "Write Review", new_flight_review_path(res.flight.id) %>
          <% end %>
          <hr>
    </div>
    </div>
  </div>
  <% end %>
  </div>


  <div class="res_main">
  <%= button_to "Main Menu", user_path(current_user), :method => :get, class:"waves-effect waves-light btn blue lighten-2 btn-medium" %>
  </div>

</div>
