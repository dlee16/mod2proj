<!-- form will POST to '/login' -->
<div class="row">
  <div class="col s12 m12 ">
    <div class="card horizontal">
      <div class="card-image">
        <%= image_tag("leio-mclaren-leiomclaren-491111-unsplash.jpg", style:"height: 100%; width: 100%;",:alt => "travel") %>
      </div>

      <div class="card-content">

<%= form_tag(login_path) do %>
<div class="input-field">
  <%= label_tag :email %><br>
  <%= text_field_tag :email %>
</div>

<div class="input-field">
  <%= label_tag :password %><br>
  <%= password_field_tag :password %>

<div class="waves-effect waves-dark btn #64b5f6 blue lighten-2 btn-large" style="width:100%;">
  <%= submit_tag 'Login' %>
  </div><br>

<% end %>
</div>
</div>
</div>
</div>
